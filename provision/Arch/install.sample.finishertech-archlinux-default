#!/usr/bin/env bash
set -eou pipefail
BASE_DIR=`cd "$(dirname "$0")"; pwd`
cd "$BASE_DIR"

echo "Arch Linux is running \"install ${@:-"with no args"}\""

use_local_mirror=false
while :
do
  case "${1:-}" in
    --use-local-mirror) use_local_mirror=true ;;
  esac
  shift || break
done

! $use_local_mirror || ./configure-local-mirror

./update-package-list
